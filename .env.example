# Dify Studio 环境配置示例
# 复制此文件为 .env 并修改实际值

# 数据库配置
DATABASE_URL=sqlite:///./dify_studio.db
# 生产环境建议使用 PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/dify_studio

# 加密密钥（生产环境必须设置，且长度至少32位）
ENCRYPTION_SECRET_KEY=your-super-secure-encryption-key-32-chars-min

# CORS配置（多个域名用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Dify API配置（可选，可在界面中配置）
DIFY_BASE_URL=https://api.dify.ai/v1
DIFY_API_KEY=your-dify-api-key-here

# 日志级别
LOG_LEVEL=INFO

# 服务器配置
HOST=0.0.0.0
PORT=8001

# 文件上传限制（单位：字节）
MAX_FILE_SIZE=10485760  # 10MB

# 开发/生产模式
ENVIRONMENT=development